{
  "name": "facebook-messenger-bot",
  "version": "1.0.0",
  "description": "Self-hosted Facebook Messenger bot with Gemini AI integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:load": "node tests/loadTest.js",
    "test:performance": "CONCURRENT_USERS=100 MESSAGES_PER_USER=5 node tests/loadTest.js",
    "build": "echo 'No build required'",
    "setup:monitoring": "node scripts/setup-monitoring.js",
    "monitor": "./scripts/monitor.sh",
    "db:migrate": "node scripts/init-database.js",
    "db:maintenance": "./scripts/db-maintenance.sh",
    "backup": "./scripts/backup.sh"
  },
  "keywords": [
    "facebook",
    "messenger",
    "bot",
    "gemini",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "correlation-id": "^5.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  }
}
